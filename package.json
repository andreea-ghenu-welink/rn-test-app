{
  "name": "rn-test-app",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "//--- Start Development Servers ---": "",
    "start": "expo start",
    "start:dev": "expo start --dev-client",

    "//--- Run on Expo Go (Shortcuts) ---": "",
    "start:android": "expo start --android",
    "start:ios": "expo start --ios",
    "start:web": "expo start --web",

    "//--- Build with EAS for Development ---": "",
    "build:dev": "eas build --platform all --profile development",
    "build:dev:android": "eas build --platform android --profile development",
    "build:dev:ios": "eas build --platform ios --profile development",
    "build:dev:simulator": "eas build --platform ios --profile ios-simulator"
  },
  "dependencies": {
    "expo": "^53.0.8",
    "expo-camera": "~16.1.6",
    "expo-constants": "^17.1.6",
    "expo-image": "^2.1.7",
    "expo-image-picker": "~16.1.4",
    "expo-linking": "~7.1.4",
    "expo-media-library": "~17.1.6",
    "expo-router": "^5.0.6",
    "expo-status-bar": "~2.2.3",
    "expo-video": "~2.1.8",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "expo-dev-client": "~5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0"
  },
  "private": true
}
